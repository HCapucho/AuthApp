@model AuthApp.Models.Servicos

@{
    ViewData["Title"] = "Novo Serviço";
}



<div class="container w-75 shadow rounded mt-5 mb-5 pb-5">
    <form asp-action="Create" class="row g-3 needs-validation" novalidade">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6">
                <label asp-for="Tipo"></label>
                <input asp-for="Tipo" class="form-control" required />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Valor"></label>
                <input asp-for="Valor" class="form-control" required/>
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="Descricao"></label>
            <textarea asp-for="Descricao" class="form-control" rows="6" required></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
        <div class="d-grid gap-2 col-1 mx-auto">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
