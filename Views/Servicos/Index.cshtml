@model IEnumerable<AuthApp.Models.Servicos>

<div class="container-fluid position-relative">
    <form asp-action="Index" method="get" class="d-flex col-5 position-absolute top-100 start-50 translate-middle mt-4">
        <input class="form-control me-2" type="search" name="searchString" placeholder="Pesquisar por tipo..." aria-label="Procurar">
        <button class="btn btn-success" type="submit"><i class="bi bi-search"></i></button>
    </form>
</div>
<p>
    <a asp-action="Create" class="btn btn-primary"><spam><i class="bi bi-person-fill-add"></i></spam> Novo Serviço</a>
</p>


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                    <div class="btn-group btn-group-sm" role="group" aria-label="">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success border-0" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Editar"><i class="bi bi-pen-fill"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-warning  border-0" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Detalhes"><i class="bi bi-list"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger border-0" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Deletar"><i class="bi bi-trash-fill"></i></a>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
